<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_height="394dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dong"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/nutx" />

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="#FFD2BB"
                android:orientation="vertical"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="99dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:text="Đánh giá của bạn"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="256dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="3dp"
                    android:text="Sẽ thật tuyệt vời nếu PDF nhận được đánh giá của
bạn nhằm nâng cao tair nghiệm"
                    android:textColor="#857777"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="231dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/saodg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/sao" />

                <ImageView
                    android:id="@+id/saodg1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/sao" />

                <ImageView
                    android:id="@+id/saodg2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/sao" />

                <ImageView
                    android:id="@+id/saodg3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/sao" />

                <ImageView
                    android:id="@+id/saodg4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/sao" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/dongdgia"
            android:layout_width="328dp"
            android:layout_height="37dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="43dp"
            android:background="@drawable/borderdong"
            android:text="Đóng"
            android:textColor="#ffff"
            android:textSize="14dp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>