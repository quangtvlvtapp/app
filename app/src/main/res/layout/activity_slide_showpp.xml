<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E5E5E"
    tools:context=".View.SlideShowppActivity">
    <ImageView
        android:id="@+id/line"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/line"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/show"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/airplay"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_marginTop="170dp"
        android:layout_below="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/docexcel2"
            android:layout_width="360dp"
            android:layout_height="202dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/pp" />
        <TextView
            android:layout_marginStart="185dp"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:text="1/16"
            android:textColor="#ffff"
            />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">
           <ImageView
               android:layout_marginLeft="40dp"
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:background="@drawable/arrleft"
               android:id="@+id/showleft"/>
            <ImageView
                android:layout_marginLeft="225dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/arrowright"
                android:id="@+id/showright"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>