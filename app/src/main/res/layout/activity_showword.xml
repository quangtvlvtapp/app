<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ShowwordActivity">
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2B5796"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/outtrangw"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/arrowleft"
            android:layout_margin="30dp"/>
        <TextView
            android:layout_width="102dp"
            android:layout_height="22dp"
            android:text="example.wtx"
            android:textSize="16dp"
            android:textColor="#EEF1F7"
            android:layout_marginTop="30dp"
            android:textStyle="bold"

            />
        <ImageView
            android:layout_marginLeft="130dp"
            android:id="@+id/uploadtrang"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/upload"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/chucnang"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bacham"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

    <ImageView
        android:background="@drawable/showword"
        android:layout_width="370dp"
        android:layout_height="574dp"
        android:layout_below="@+id/menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp" />
</RelativeLayout>